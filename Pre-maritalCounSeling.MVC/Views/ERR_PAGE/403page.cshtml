@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "403 Forbidden";
}

<style>
    .error-container {
        text-align: center;
        padding: 80px 20px;
        font-family: Arial, sans-serif;
    }

    .error-code {
        font-size: 100px;
        font-weight: bold;
        color: #ff4b5c;
    }

    .error-message {
        font-size: 24px;
        color: #333;
    }

    .error-description {
        font-size: 18px;
        color: #666;
        margin-top: 10px;
    }

    .error-link {
        display: inline-block;
        margin-top: 20px;
        padding: 12px 24px;
        background-color: #007bff;
        color: #fff;
        font-size: 16px;
        text-decoration: none;
        border-radius: 5px;
    }

    .error-link:hover {
        background-color: #0056b3;
    }
</style>

<div class="error-container">
    <div class="error-code">403</div>
    <div class="error-message">Access Denied</div>
    <div class="error-description">You don't have permission to access this page.</div>
    <a href="/" class="error-link">Go to Homepage</a>
</div>
